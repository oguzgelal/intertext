{
  "name": "intertext",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "nohoist": [
    "*react*",
    "*react*/**",
    "*react-native*",
    "*react-native*/**"
  ],
  "scripts": {
    "build": "npm run build:engine && npm run build:editor",
    "build:editor": "cd ./packages/intertext-editor && npm run build",
    "build:engine": "cd ./packages/intertext-engine && npm run build",
    "push": "git remote | xargs -L1 -I R git push R master",
    "sync": "git pull origin master && npm run push"
  },
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
